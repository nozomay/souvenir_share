<div class="container">
  <div class="row justify-content-center">
    <% if @users.exists? %>
      <% @users.each do |user| %>
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 20,20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
            <%= user.name %>
          <% end %>
      <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
  </div>
</div>