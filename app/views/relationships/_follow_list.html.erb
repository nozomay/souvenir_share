<div class="container">
  <div class="row">
    <% if @users.exists? %>
      <% @users.each do |user| %>
        <table>
          <thead>
            <tr>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
              <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 20,20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                <%= user.name %>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
  </div>
    <% else %>
  <div class="row">
    ユーザーはいません
  </div>
    <% end %>
</div>