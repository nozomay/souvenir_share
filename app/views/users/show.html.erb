<div class="container">
  <div class="row">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row m-3 justify-content-lg-center">
    <div class="col-xl-3 col-lg-3 col-md-3 text-center">
      <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-9">
      <div class="row p-1">
        <div class="col-12">
          <%= @user.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12">
          <div class="p-1">
          <%= @user.introduction %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            投稿数：<%= @user.posts.count %>
          </div>
        </div>
        <br class="d-inline d-sm-none">
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1" >
            フォロー数：<%= link_to user_followings_path(@user), class: 'followings' do %>
                          <%= @user.followings.count %>
                        <% end %>
          </div>
        </div>
        <br class="d-inline d-sm-none">
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            フォロワー数：<%= link_to user_followers_path(@user), class: 'followers' do %>
                            <%= @user.followers.count %>
                          <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <% if @user.id == current_user.id %>
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            <%= link_to "プロフィール編集", edit_user_path(@user) %>
          </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            <%= link_to "投稿する", new_post_path %>
          </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            <%= link_to "お気に入りのお土産", favorites_user_path(@user) %>
          </div>
        </div>
        <% else %>
          <% if current_user.following?(@user) %>
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            <%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete %>
          </div>
        </div>
          <% else %>
        <div class="col-xl-4 col-lg-4 col-md-4">
          <div class="p-1">
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :POST %>
          </div>
        </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row border m-3">
    <% @posts.each do |post| %>
      <div class="col-xl-4 col-lg-6 col-sm-6 p-4 text-center">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 300, 300 %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
</div>