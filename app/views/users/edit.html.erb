<div class="container">
  <div class="row justify-content-center p-3">
    <h2>プロフィール編集</h2>
  </div>
  <div class="form-group row justify-content-center">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <br>
  </div>
  <div class="form-group row justify-content-center">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
  </div>
  <div class="form-group row justify-content-center">
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :"プロフィール画像" %><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <%= f.label :"ニックネーム" %><br>
        <%= f.text_field :name, :size =>"40x10" %>
      </div>
      <div class="form-group">
        <%= f.label :"自己紹介文" %><br>
        <%= f.text_field :introduction, :size =>"40x10" %>
      </div>
      <div class="form-group">
        <%= f.submit "保存", class:"btn btn-outline-primary btn-block" %>
      </div>
      <% end %>
  </div>
  <div class="row center-block text-center">
    <div class="col-3">
    </div>
    <div class="col-3">
      <%= link_to "マイページ", user_path(@user), class:"btn btn-outline-secondary btn-block" %>
    </div>
    <div class="col-3">
      <%= link_to "登録情報編集", edit_user_registration_path(@user), class:"btn btn-outline-secondary btn-block" %>
    </div>
  </div>
  <br>
</div>