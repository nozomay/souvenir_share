<div class="container">
  <div class="row">
    <h2>検索結果</h2>
  </div>
</div>
<div class="container">
  <div class="row align-items-start">
    <% if @range == "ユーザー" %>
      <% if @users.count > 0 %>
        <% @users.each do |user| %>
          <div class="col-12 text-center">
            <%= link_to user_path(user.id) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 20,20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
              <%= user.name %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p>みつかりません。</p>
      <% end %>
    <% else %>
      <% if @posts.count > 0 %>
        <% @posts.each do |post| %>
          <div class="col-xl-4 col-lg-6 col-sm-6 p-4 text-center">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, :fill, 300,300 %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p>みつかりません。</p>
      <% end %>
    <% end %>
  </div>
</div>