<div class="container">
  <div class="row">
    <h2>タグが「<%=@tag.name%>」の投稿一覧</h2>
  </div>
</div>
<div class="container">
  <div class="row align-items-start">
    <% @tag_list.each do |list|%>
      <%=link_to list.name,search_tag_path(tag_id: list.id) %>
      <%="(#{list.posts.count})" %>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <%= paginate @tag_list %>
  </div>
</div>
<div class="container">
  <div class="row align-items-start">
    <% @posts.each do |post| %>
      <div class="col-xl-4 col-lg-6 col-sm-6 p-4 text-center">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 300,300 %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>